{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "exclude": ["./*/target"],
  "include": [
    "./deployments/files/**/*.json",
    "./deployments/addresses/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./data/**/*.ts",
    "./test/**/*.json"
  ]
}
